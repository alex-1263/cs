<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    tools:context=".MainaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="用户名称："
            android:textSize="22sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/edit_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:hint="请输入用户名"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="用户密码："
            android:textSize="22sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入六位密码"
            android:inputType="textPassword"
            android:maxLength="6"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="right"
            android:onClick="GoInquire"
            android:text="忘记密码？"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="HardcodedText,InefficientWeight,OnClick,RtlHardcoded,UsingOnClickInXml,TouchTargetSizeCheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="登录"
            android:onClick="GoLogin"
            android:textSize="20sp"
            android:background="@drawable/button_style"
            android:textColor="#000000"
            tools:ignore="HardcodedText,UsingOnClickInXml"
            style="?android:attr/buttonBarButtonStyle" />
        <android.widget.Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="注册"
            android:onClick="GoEnroll"
            android:textSize="20sp"
            android:background="@drawable/button_style"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            tools:ignore="HardcodedText,UsingOnClickInXml"
            style="?android:attr/buttonBarButtonStyle" />


        <android.widget.Button
            android:id="@+id/btn_quit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:onClick="GoQuit"
            android:text="退出"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="HardcodedText,UsingOnClickInXml" />
    </LinearLayout>
</LinearLayout>
